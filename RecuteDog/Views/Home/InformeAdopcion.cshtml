@model IEnumerable<RecuteDog.Models.Mascota>

@{
    ViewData["Title"] = "InformeAdopcion";
}

<h1>Informe de Adopciones</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th>NOMBRE</th>
            <th>RAZA</th>
            <th>EDAD</th>
            <th>ANCHURA</th>
            <th>ALTURA</th>
            <th>PESO</th>
            <th>IMAGEN</th>
            <th>IDREFUGIO</th>
            <th>DESCRIPCION</th>
            <th>PELIGROSIDAD</th>
            <th>ADOPTADO</th>
            <td>DEVOLVER</td>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Raza</td>
            <td>@item.Edad</td>
            <td>@item.Ancho</td>
            <td>@item.Alto</td>
            <td>@item.Peso</td>
            <td><img src="@item.Imagen" style="width:100px; height:auto" /></td>
            <td>@item.IdRefugio</td>
            <td>@item.Peligrosidad</td>
            <td>@item.Adopdatado</td>
                <td>
                    <form method="post" action="@Url.Action("InformeAdopcion", "Home")">
                        <input type="hidden" name="idmascota" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
        </tr>
}
    </tbody>
</table>
