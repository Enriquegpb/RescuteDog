@model IEnumerable<RecuteDog.Models.Voluntario>

@{
    ViewData["Title"] = "Index";
    User user = Context.Session.GetObject<User>("LOGSESSION");
}

@*<p>
    <a asp-controller="Voluntarios" asp-action="FormVoluntarios" class="btn btn-dark">Inscribirse</a>
</p>*@
@if (user != null && user.Id == 2)
{
     <div class="text-right">
         <a class="btn btn-dark" asp-controller="Voluntarios" asp-action="FormVoluntarios" style="margin-right:0px">Nuevo Voluntario</a>
      </div> 
}
@if(Model != null)
{
    @foreach(Voluntario voluntario in Model)
    {
        <div class="p-2 p-md-2 mb-4 bg-light rounded-3">
            <div class="container-fluid py-2">            
                <img src="@voluntario.Imagen" class="img-fluid float-left" alt="Imagen flotada a la izquierda">
                <div class="col-md-6">
                    <p class="text-justify lead my-3">@voluntario.Mensaje</p>
                </div>
             </div>
             @if(user!=null && user.Id == 2){
                <div class="text-right">
                    <a class="btn btn-dark" asp-controller="Voluntarios" asp-action="ModificarVoluntarios" asp-route-idrefugio="@voluntario.IdVoluntario" style="margin-right:0px">Modificar Voluntario</a>
                </div> 
                <div class="text-right">
                    <a class="btn btn-danger" asp-controller="Voluntarios" asp-action="DeletePublicacion" asp-route-idrefugio="@voluntario.IdVoluntario" style="margin-right:0px">Eliminar</a>
                </div>
            }
        </div>
      
    }

}
